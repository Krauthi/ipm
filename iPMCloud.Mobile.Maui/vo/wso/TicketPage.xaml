<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Tickets">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Filter-Buttons  -->
        <HorizontalStackLayout
            Grid.Row="0"
            Padding="10"
            Spacing="10">
            <!--<Button Text="Alle" Clicked="OnFilterAll"/>
            <Button Text="Neu" Clicked="OnFilterNew"/>
            <Button Text="In Arbeit" Clicked="OnFilterInProgress"/>
            <Button Text="Erledigt" Clicked="OnFilterCompleted"/>-->
        </HorizontalStackLayout>

        <!--  Ticket-Liste  -->
        <CollectionView
            x:Name="ticketsCollection"
            Grid.Row="1"
            SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="10,5"
                        Padding="10"
                        StrokeShape="RoundRectangle 8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="{Binding titel}" />
                            <Label
                                Grid.Row="1"
                                Margin="0,5,0,0"
                                FontSize="14"
                                Text="{Binding beschreibung}" />
                            <Label
                                Grid.Row="2"
                                Margin="0,5,0,0"
                                FontSize="12"
                                Text="{Binding besitzerName}"
                                TextColor="Gray" />
                            <Label
                                Grid.Row="3"
                                FontSize="12"
                                Text="{Binding GetFormattedAge()}"
                                TextColor="Gray" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>