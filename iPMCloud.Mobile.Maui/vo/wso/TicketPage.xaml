<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Tickets">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter-Buttons -->
        <HorizontalStackLayout Grid.Row="0" Padding="10" Spacing="10">
            <!--<Button Text="Alle" Clicked="OnFilterAll"/>
            <Button Text="Neu" Clicked="OnFilterNew"/>
            <Button Text="In Arbeit" Clicked="OnFilterInProgress"/>
            <Button Text="Erledigt" Clicked="OnFilterCompleted"/>-->
        </HorizontalStackLayout>

        <!-- Ticket-Liste -->
        <CollectionView x:Name="ticketsCollection" 
                        Grid.Row="1"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="10,5" StrokeShape="RoundRectangle 8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" 
                                   Text="{Binding titel}" 
                                   FontSize="16" 
                                   FontAttributes="Bold"/>
                            <Label Grid.Row="1" 
                                   Text="{Binding beschreibung}" 
                                   FontSize="14" 
                                   Margin="0,5,0,0"/>
                            <Label Grid.Row="2" 
                                   Text="{Binding besitzerName}" 
                                   FontSize="12" 
                                   TextColor="Gray" 
                                   Margin="0,5,0,0"/>
                            <Label Grid.Row="3" 
                                   Text="{Binding GetFormattedAge()}" 
                                   FontSize="12" 
                                   TextColor="Gray"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>