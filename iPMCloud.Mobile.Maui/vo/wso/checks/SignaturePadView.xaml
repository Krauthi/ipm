<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="iPMCloud.Mobile.SignaturePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:iPMCloud.Mobile.Controls"
    Title="Unterschrift">

    <Grid Padding="20" RowDefinitions="*, Auto">

        <!--  Signatur-Bereich  -->
        <Border
            Grid.Row="0"
            Margin="0,0,0,10"
            Background="White"
            Stroke="Black"
            StrokeThickness="2">
            <controls:SignaturePadView
                x:Name="signaturePad"
                HeightRequest="300"
                SignatureImage="{Binding SignatureBase64}"
                StrokeColor="Black"
                StrokeWidth="3" />
        </Border>

        <!--  Buttons  -->
        <HorizontalStackLayout
            Grid.Row="1"
            HorizontalOptions="Center"
            Spacing="10">
            <Button
                BackgroundColor="LightGray"
                Clicked="OnClearClicked"
                Text="Lï¿½schen" />

            <Button
                BackgroundColor="Green"
                Clicked="OnSaveClicked"
                Text="Speichern" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>