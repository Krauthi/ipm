<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false">

	<targets>
		<target name="logfile"
			xsi:type="File"
			fileName="${specialfolder:folder=MyDocuments}/../Library/logs/nlog.txt"
			archiveFileName="${specialfolder:folder=MyDocuments}/../Library/logs/nlog-{#}.txt"
		archiveEvery="Day"
			keepFileOpen="false"
			archiveNumbering="Date"
			maxArchiveFiles="2"
			archiveDateFormat="yyyy-MM-dd-HH-mm"
			encoding="UTF-8">
		</target>
	</targets>
	<rules>
		<logger name="*" minlevel="Debug" writeTo="logfile" />
	</rules>

</nlog>
