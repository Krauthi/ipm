<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- ✅ Produktionseinstellungen - NUR HTTPS -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- ✅ Entwicklungs-/Test-Domains (HTTP erlaubt) -->
    <!-- WARNUNG: In Production entfernen! -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android Emulator -->
        <domain includeSubdomains="true">192.168.1.0</domain> <!-- Lokales Netzwerk -->
        <!-- Füge hier deine Test-Domains hinzu -->
    </domain-config>
</network-security-config>